{
    "name": "Parrot Security Container",
    "build": {
        "context": "..",
        "dockerfile": "Dockerfile"
    },

    "runArgs": [
        "--network=host"
    ],

    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.shell.linux": "/bin/bash"
            },
            "extensions": [
                "ms-python.python",                      // Python
                "tal7aouy.icons",                        // Custom Icons
				"bierner.markdown-preview-github-styles" // Markdown Preview
            ]
        }
    }
}
